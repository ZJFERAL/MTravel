<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <TextView
        android:id="@+id/txt_day_num"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#fff"
        android:elevation="3dp"
        android:gravity="center"
        android:padding="4dp"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <WebView
        android:id="@+id/web_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

    </WebView>

    <TextView
        android:id="@+id/txt_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/item_recy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_author"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/colorTransDark"/>

        <TextView
            android:id="@+id/txt_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right"
            android:textColor="@color/colorTransDark"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_margin="15dp"
        android:background="@color/colorTransDark"/>

    <LinearLayout
        android:id="@+id/lay_bottom_travel_place"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:visibility="gone">



        <TextView
            android:id="@+id/txt_about_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/about_loaction"
            android:textSize="17sp"
            android:textStyle="bold"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/item_recy_location"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lay_bottom_hotel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:visibility="gone">


        <TextView
            android:id="@+id/txt_about_hotel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/about_loaction"
            android:textSize="17sp"
            android:textStyle="bold"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/item_recy_hotel"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>



</LinearLayout>