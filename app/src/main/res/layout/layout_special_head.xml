<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_cover"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:scaleType="fitXY"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/img_cover"
        android:layout_alignLeft="@id/img_cover"
        android:layout_alignRight="@id/img_cover"
        android:layout_alignTop="@id/img_cover"
        android:background="@drawable/bg_black2trans_reve"/>


    <TextView
        android:id="@+id/txt_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/img_cover"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/txt_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/txt_desc"
        android:gravity="center"
        android:text="@string/app_line"
        android:textSize="18sp"/>


    <TextView
        android:id="@+id/txt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/txt_line"
        android:gravity="center"
        android:textSize="24sp"
        />

</RelativeLayout>