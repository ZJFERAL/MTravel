<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="7dp"
        app:cardCornerRadius="1dp"
        app:cardElevation="6dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_cover"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:scaleType="fitXY"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/img_cover"
                android:layout_alignLeft="@id/img_cover"
                android:layout_alignRight="@id/img_cover"
                android:layout_alignTop="@id/img_cover"
                android:background="@drawable/bg_black2trans_reve"/>

            <TextView
                android:id="@+id/txt_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/img_cover"
                android:layout_marginBottom="13dp"
                android:layout_marginLeft="13dp"
                android:textColor="@color/colorWhite"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/txt_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/txt_content"
                android:layout_marginLeft="13dp"
                android:textColor="@color/colorWhite"
                android:textSize="17sp"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>