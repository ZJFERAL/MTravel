<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="7dp"
        app:cardCornerRadius="1dp"
        app:cardElevation="6dp"
        app:contentPadding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_place_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginLeft="15dp"/>

            <ImageView
                android:id="@+id/img_cover"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/tips"
                    style="@style/btn_tips"
                    android:drawableTop="@drawable/bg_btn_tips"
                    android:text="@string/tip"/>

                <Button
                    android:id="@+id/trip"
                    style="@style/btn_tips"
                    android:drawableTop="@drawable/bg_btn_trip"
                    android:text="@string/trip"/>

                <Button
                    android:id="@+id/travel"
                    style="@style/btn_tips"
                    android:drawableTop="@drawable/bg_btn_travel"
                    android:text="@string/travel"/>

                <Button
                    android:id="@+id/special"
                    style="@style/btn_tips"
                    android:drawableTop="@drawable/bg_btn_special"
                    android:text="@string/special"/>
            </LinearLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>